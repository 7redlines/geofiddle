@using System

<!DOCTYPE html>
<html ng-app="geofiddle">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/bundles/css/init")
    @Styles.Render("~/bundles/css/app")

    @Scripts.Render("~/bundles/js/modernizr")
    
    @Scripts.Render("~/bundles/js/init")
    @Scripts.Render("~/bundles/js/map")
    @Scripts.Render("~/bundles/js/app")

    @*<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCOTcvrJDziEgGbVW8soHydf--V9lXn-6c"></script>*@
</head>
<body id="fiddle-body">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
